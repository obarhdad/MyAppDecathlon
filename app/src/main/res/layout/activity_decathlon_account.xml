<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bCreateMyAccount"
        android:layout_width="@dimen/activity_layout_with_l"
        android:layout_height="@dimen/activity_layout_height_l"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:background="@color/colorButton"
        android:text="@string/person_create_my_account"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/lDecathlonAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bCreateMyAccount"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/ic_decathlon_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:text="@string/store_decathlon"
            android:textSize="17dp" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp" />


    </LinearLayout>


</RelativeLayout>